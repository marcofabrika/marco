{
  "siteurl": "wocker.dev",

  "tasks": {
    "browserify":   true,
    "browsersync":  true,
    "imagemin":     true,
    "sass":         true,
    "watch":        true
  },

  "paths": {
    "assets":    "./assets",
    "css":       "css",
    "js":        "js",
    "images":    "images",
    "sass":      "_sass",
    "jsSrc":     "_js",
    "imagesSrc": "_images"
  },

  "sass": {
    "outputStyle": "compressed"
  },

  "autoprefixer" : {
    "browsers": [
      "> 1%",
      "last 2 versions",
      "Firefox ESR"
    ]
  },

  "js": {
    "src": [
      "main.js"
    ],
    "dist": "main.js"
  }
}
